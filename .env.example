NODE_ENV=development
PORT=5000

# Database (use DATABASE_URL for both local and production)
# Local: postgresql://user:password@localhost:5432/dbname
# Production (Supabase): Get from Supabase dashboard
DATABASE_URL=

# JWT
JWT_SECRET=

# File Encryption (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FILE_ENCRYPTION_MASTER_KEY=

# Pinata IPFS
PINATA_JWT=your-pinata-jwt-here
PINATA_GATEWAY=your-gateway.mypinata.cloud

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Production: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:5173

# Blockchain (Mantle Sepolia)
RPC_URL=https://rpc.sepolia.mantle.xyz
CHAIN_ID=5003
PRIVATE_KEY=your-wallet-private-key-here
CONTRACT_ADDRESS=your-contract-address-here